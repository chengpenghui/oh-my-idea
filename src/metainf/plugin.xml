<idea-plugin url="http://plugins.jetbrains.com/plugin/164">
    <name>Oh My IDEA</name>
    <id>oh-my-idea</id>
    <description>plugin like vim,but only for java</description>
    <version>1.0</version>
    <vendor>IntelliJ</vendor>


    <application-components>
        <component>
            <implementation-class>com.codingbaby.ohmyidea.OhPlugin</implementation-class>
        </component>
    </application-components>


    <actions>

        <action id="PluginToggle" class="com.codingbaby.ohmyidea.PluginToggle" text="Oh My IDEA"
                description="Toggle the Plugin On/Off">
            <keyboard-shortcut first-keystroke="control shift o" keymap="$default"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>


        <action id="MotionFirstLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineFirstAction" text="First Line"/>
        <action id="MotionLastLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineLastAction" text="Last Line"/>

        <action id="ShortcutKeyAction" class="com.codingbaby.ohmyidea.ShortcutKeyAction" text="Shortcuts"/>


    </actions>


</idea-plugin>
